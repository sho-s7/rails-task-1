<div class="container">

    <div class="heading">
        <h3>予定の新規追加</h3>
    </div>

    <div class="form-wrapper">
        <%= bootstrap_form_with model: @schedule, html: { novalidate: true } do |f| %>
            <div class="row">
                <div class="col-12"><%= f.text_field :title, placeholder: "タイトル" %></div>
                <div class="col-6"><%= f.date_field :start_at, class: "date-field", readonly:"", placeholder: "---- / -- / --" %></div>
                <div class="col-6"><%= f.date_field :end_at, class: "date-field", readonly:"", placeholder: "---- / -- / --" %></div>
                <div class="col-12"><%= f.check_box :all_day %></div>
                <div class="col-12"><%= f.text_area :memo, rows: 5, placeholder: "メモを入力する" %></div>
            </div>

            <div class="d-flex justify-content-end">
                <%= link_to "キャンセル", :schedules, class: "btn btn-secondary" %>
                <%= f.submit "保存", class: "btn btn-submit btn-primary" %>
            </div>
        <% end %>
    </div>
</div>